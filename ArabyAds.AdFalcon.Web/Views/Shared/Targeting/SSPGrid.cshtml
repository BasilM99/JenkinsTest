                <div class="msg">
                    <img src="@Url.GetImagePath("ajax-loader.gif")" style="margin:50%">

                </div>
            </div>


        </div>
        <br>
        <div ng-show="showToolBar" dir="@lang" style="width:700px">

            <div class="container">
                <div class="row">

                    <div class="col-6 col-sm-4">

                    </div>
                    <div class="col-6 col-sm-4">

                    </div>
                    <div class="col-6 col-sm-2">
                        <button type="button" ng-disabled="mySelectedRows.length==0" ng-click="ClearSelection()" class="btn">@Html.GetResource("Clear", "Global")</button>

                    </div>
                    <div class="col-6 col-sm-2">
                        <button type="button" ng-disabled="mySelectedRows.length==0" ng-click="AddToInventorySource()" class="primary-btn">@Html.GetResource("Add", "Keywords")</button>

                    </div>

                </div>
            </div>

        </div>
    </div>
</div>

