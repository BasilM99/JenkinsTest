                        <input type="text" class="form-control" style="width:215px!important;font-family: initial;" id="SSPFilterInputEchangeName" ng-change="filter()" ng-model='filterValueExchangeName' placeholder="@Html.GetResource("SearchByName", "SSPPartner")" />

                    </div>
                    <div class="col-6 col-sm-4">
                        <input type="text" class="form-control" style="width:215px!important;font-family: initial;" id="SSPFilterInput" ng-change="filter()" ng-model='filterValue' placeholder="@Html.GetResource("SearchByIdOrName", "Global")" />

                    </div>
                </div>
            </div>

        </div>
        <br />
        <div id="SSPGridDiv" ui-grid="gridOptions" dir="@lang" style="width:700px;" class="grid" ui-grid-infinite-scroll ui-grid-selection ui-grid-auto-resize>
