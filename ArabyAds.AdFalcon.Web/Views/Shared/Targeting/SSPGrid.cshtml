<style>
    .ui-grid-row .ui-grid-cell.ui-grid-row-header-cell {
        background: -webkit-gradient(linear, left bottom, left top, color-stop(0, #faf9f9), color-stop(1, #ffffff));
        border-color: #d4d4d4;
    }

    .ui-grid-row-selected {
        /*background:-webkit-gradient(linear, left bottom, left top, color-stop(0,#eeeeeb), color-stop(1, #c4cdd4));*/
        background-color: #c4cdd4;
    }

        .ui-grid-row-selected .ui-grid-cell.ui-grid-row-header-cell {
            background: -webkit-gradient(linear, left bottom, left top, color-stop(0, #faf9fb), color-stop(1, #c4cdd4));
            background-color: unset;
            /*background: -webkit-gradient(linear, left bottom, left top, color-stop(0, #eeeeeb), color-stop(1, #c4cdd4));
        background-color:#c4cdd4;*/
        }

    .ui-grid-row.ui-grid-row-selected > [ui-grid-row] > .ui-grid-cell {
        /*background:-webkit-gradient(linear, left bottom, left top, color-stop(0, #eeeeeb), color-stop(1, #c4cdd4));*/
        background-color: #c4cdd4;
        border-bottom: solid 1px;
        border-bottom-color: darkgray;
    }

    .ui-grid-selection-row-header-buttons {
        cursor: pointer;
        opacity: 1;
    }

    .ui-grid-icon-ok {
        background-color: unset;
        width: 25px;
        height: 25px;
        margin-top: 2px;
        margin-bottom: 2px;
    }

        .ui-grid-icon-ok:before {
            content: '\f096';
            font-family: FontAwesome;
        }

    .ui-grid-selection-row-header-buttons.ui-grid-row-selected.ui-grid-icon-ok:before {
        content: '\f046' !important;
        font-family: FontAwesome;
    }
</style>



