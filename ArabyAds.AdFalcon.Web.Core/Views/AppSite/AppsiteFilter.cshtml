@model IEnumerable<ArabyAds.AdFalcon.Web.Controllers.Model.Action>
<style type="text/css">
    .dropdown.dropdown-lg .dropdown-menu {
        margin-top: -1px;
        padding: 6px 20px;
    }

    .input-group-btn .btn-group {
        display: flex !important;
    }

    .btn-group .btn {
        border-radius: 0;
        margin-left: -1px;
    }

        .btn-group .btn:last-child {
            border-top-right-radius: 4px;
            border-bottom-right-radius: 4px;
        }

    .btn-group .form-horizontal .btn[type="submit"] {
        border-top-left-radius: 4px;
        border-bottom-left-radius: 4px;
    }

    .form-horizontal .form-group {
        margin-left: 0;
        margin-right: 0;
    }

    .form-group .form-control:last-child {
        border-top-left-radius: 4px;
        border-bottom-left-radius: 4px;
    }
</style>
<script>
    function onkeypressName(event)
    {

        var key = event.keyCode || event.charCode;
        if (key == 13) {

            event.preventDefault();
            generateAppSiteGrid()();
        }
    }
</script>

<div class="container special-content" style="width:45%" id="targetingContainer">
    <div class="input-group" id="adv-search">
        <div class="dropdown dropdown-lg">
            <div style="width: 400px;font-size:12px ;margin-top:2px;" class="dropdown-menu dropdown-menu-right" id="AppSiteFilterCollapse" role="menu">
                <div id="filterdiv" style="overflow:unset">
                    <div class="data-row">

                        <div class="field-container marignBotoomCus">
                            <span class="go-bold ">@Html.GetResource("Name", "Global")</span>

                        </div>
                        <div class="col-lg-offset-2">
                            <div class="field-container marignBotoomCus">
                                <input type="text" id="Name" name='Name'
                                       class="text-box" onchange="generateAppSiteGrid()" onkeypress="onkeypressName(event)" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="blue-filter-container" style="overflow:unset;text-align: unset;width: 323px!important;margin-left: 41px;">
                    @{
                        string selected = "";
                        foreach (var action in Model)
                        {
                            var d = new RouteValueDictionary { { "filterType", action.Code } };
                            if (action.IsSelected)
                            {
                                selected = "selected";
                            }

                            <a class="@selected" forAppSiteFilter="true" id='@action.Code-filterType' href='#' onclick="setFilterSelected('@action.Code');stopSubmit(event);">@action.DisplayText</a>
                            selected = "";
                        }
                    }

                </div>



       
             
                <div class="floating-right">
                    <br>
                    <input type="button" onclick="generateAppSiteGrid()" value='@Html.GetResource("Filter")' class="btn filter-button primary-btn" />
                    <input type="button" onclick="return true;" data-toggle="collapse" data-target="#AppSiteFilterCollapse" aria-expanded="false" value='@Html.GetResource("Cancel")' class="btn filter-button " />
                </div>

            </div>
        </div>
    </div>

</div>

