<script type="text/javascript">
    var defaultText = "@Html.GetResource("Default")";
    var wifiOnlyText='@Html.GetResource("WIFIOnly", "Campaign")';
    var specificUrlText = '@Html.GetResource("SpecificUrlText", "Campaign")';
    var specificIPRangesText='@Html.GetResource("SpecificIPRanges", "Campaign")';
