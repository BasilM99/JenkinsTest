                        columns.Template(x => " <div style='width:50px;  margin-right:10px; float:left;'> <div><a class='t-button t-button-icon t-button-bare t-grid-delete' style='float: left; margin-right: 5px' onclick=TextFiltersDialog('" + x.Url + "','" + x.UrlFilterId + "','" + "delete" + "')><span class='t-icon t-delete'></span></a></div> <div><a class='t-button t-grid-edit t-button-icon t-button-icon t-button-bare' style='float: left; margin-right: 5px' onclick=EditAddFilter('" + x.Url + "','" + x.UrlFilterId + "','" + "update" + "')><span class='t-icon t-edit'></span></a></div> </div>");

