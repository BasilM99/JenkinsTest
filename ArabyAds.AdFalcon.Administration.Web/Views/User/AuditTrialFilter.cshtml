@model ArabyAds.AdFalcon.Web.Controllers.Model.User.TrialListViewModel

<style type="text/css">
    .dropdown.dropdown-lg .dropdown-menu {
        margin-top: -1px;
        padding: 6px 20px;
    }

    .input-group-btn .btn-group {
        display: flex !important;
    }

    .btn-group .btn {
        border-radius: 0;
        margin-left: -1px;
    }

        .btn-group .btn:last-child {
            border-top-right-radius: 4px;
            border-bottom-right-radius: 4px;
        }

    .btn-group .form-horizontal .btn[type="submit"] {
        border-top-left-radius: 4px;
        border-bottom-left-radius: 4px;
    }

    .form-horizontal .form-group {
        margin-left: 0;
        margin-right: 0;
    }

    .form-group .form-control:last-child {
        border-top-left-radius: 4px;
        border-bottom-left-radius: 4px;
    }
</style>
<script>

    function onkeypressName(event) {
        var key = event.keyCode || event.charCode;
        if (key == 13) {

            event.preventDefault();
            generateAudittrialGrid();
        }
    }
</script>

<div class="container special-content" style="width:45%" id="targetingContainer">
    <div class="input-group" id="adv-search">
        <div class="dropdown dropdown-lg">

            @{
                if (Model.ViewName == "AuditTrialSessions")
                {
                    <div style="width: 295px;font-size:12px ;margin-top:2px;" class="dropdown-menu dropdown-menu-right" id="AuditFilterCollapse" role="menu">
                        <div id="filterdiv" style="overflow:unset">
                            <div class="data-row CampRow" id="UserNameDiv">

                                <div class="field-container marignBotoomCus">
                                    <span class="go-bold">@Html.GetResource("UserName", "AuditTrial")</span>

                                </div>
                                <div class="col-lg-offset-2">
                                    <div class="field-container marignBotoomCus">
                                        <input type="text" id="UserNameSearch" name="UserNameSearch"
                                               style="width: 100%;" class="text-box" onchange="generateAudittrialGrid()" onkeypress="onkeypressName(event)" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="floating-right">
                            <br>
                            <input type="button" onclick="generateAudittrialGrid()" value='@Html.GetResource("Filter")' class="btn filter-button primary-btn" />
                            <input type="button" onclick="return true;" data-toggle="collapse" data-target="#AuditFilterCollapse" aria-expanded="false" value='@Html.GetResource("Cancel")' class="btn filter-button " />
                        </div>

                    </div>
                }
                else
                {
                    <div style="width: 320px;font-size:12px ;margin-top:2px;" class="dropdown-menu dropdown-menu-right" id="AuditFilterCollapse" role="menu">
                        <div id="filterdiv" style="overflow:unset">
                            <div class="data-row CampRow" id="NameDiv" style="display:none;">

                                <div class="field-container marignBotoomCus">
                                    <span class="go-bold ">@Html.GetResource("Name", "Global")</span>

                                </div>
                                <div class="col-lg-offset-2">
                                    <div class="field-container marignBotoomCus" style="width: 100%;">
                                        <input type="text" id="Name" name='Name' style="width: 100%;"
                                               class="text-box" onchange="generateAudittrialGrid()" onkeypress="onkeypressName(event)" />
                                    </div>
                                </div>
                            </div>
                            <div class="data-row CampRow" id="ObjectTypeDiv">

                                <div class="field-container marignBotoomCus">
                                    <span class="go-bold">@Html.GetResource("Type", "AppSite")</span>

                                </div>
                                <div class="col-lg-offset-2">
                                    <div class="field-container marignBotoomCus" style="width: 100%;">
                                        @Html.AdFalconDropDownList("ObjectType", Model.ObjectTypes, new { onchange = "ObjectTypeChanged(this)", @style = "width: 100%;" })

                                    </div>
                                </div>
                            </div>
                            <div class="floating-right">
                                <br>
                                <input type="button" onclick="generateAudittrialGrid()" value='@Html.GetResource("Filter")' class="btn filter-button primary-btn" />
                                <input type="button" onclick="return true;" data-toggle="collapse" data-target="#AuditFilterCollapse" aria-expanded="false" value='@Html.GetResource("Cancel")' class="btn filter-button " />
                            </div>

                        </div>
                    </div>

                }
            }
        </div>
    </div>

</div>
