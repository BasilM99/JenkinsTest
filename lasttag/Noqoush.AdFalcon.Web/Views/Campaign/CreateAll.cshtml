    function localInitilize() {
        var dates = jQuery("#oCampaignDto_StartDate, #oCampaignDto_EndDate").datepicker({
            changeMonth: true,
            showButtonPanel: true,
            showOn: 'both',
            minDate: @mindate,
            buttonImageOnly: true,
            isRTL: false,
            dateFormat: 'dd-mm-yy',
            buttonImage: '@(Url.GetImagePath("Calendar-icon.png"))',
            onSelect: function (selectedDate) {

                if (this.id == "oCampaignDto_StartDate") {
                    if(isRuntime=='True')
                    {
                        $("#oCampaignDto_StartDate").val(startDate);

                        return;
                    }
                    startDateChanged = true;
                    $(this).valid();
                }
                var option = this.id == "oCampaignDto_StartDate" ? "minDate" : "maxDate",
                    instance = $(this).data("datepicker"),
                    date = $.datepicker.parseDate(instance.settings.dateFormat || $.datepicker._defaults.dateFormat, selectedDate, instance.settings);
                dates.not(this).datepicker("option", option, date);
            }
        });
    };

    function customBannerValidate() {
        var result = true;
        clearErrorMessage();
		//debugger;

		if ($("#oCampaignSettingsDto_FrequencyCapping_ID").val() == undefined || $("#oCampaignSettingsDto_FrequencyCapping_ID").val()=='') {
			$("#oCampaignSettingsDto_FrequencyCapping_EventId").val(0);

