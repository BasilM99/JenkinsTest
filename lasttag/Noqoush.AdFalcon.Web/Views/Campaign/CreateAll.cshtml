		}
		$("form:not(#SwitchAccountForm)").validate().form();
		result = $("form:not(#SwitchAccountForm)").valid();
        result = validateDate() && result;
        result = validateBudget() && result;


        return result;
    };
    function AdvertisersChanged(event, item) {


        if ((typeof (item) != "undefined") && (item != null)) {

            $('[name="Advertiser.ID"]').val(item.ID);
        }
        else {
            $('[name="Advertiser.ID"]').val('');
        }
		$("form:not(#SwitchAccountForm)").data('validator').element('#Advertiser_ID');

    }
    function validateDate() {
        var result = true;
        var date_now = new Date();
        var startDate = tempDate = jQuery("#oCampaignDto_StartDate").datepicker('getDate');
        var endDate = jQuery("#oCampaignDto_EndDate").datepicker('getDate');
        var startTime = Get_time_from_control('oCampaignDto_StartTime');
        var endTime = Get_time_from_control("oCampaignDto_EndTime");
        if(!hasValue(startTime)) {
            startTime = new Date(date_now.getFullYear(), date_now.getMonth(), date_now.getDate(),0,0,0);
        }
        if(!hasValue(endTime)) {
            endTime = new Date(date_now.getFullYear(), date_now.getMonth(), date_now.getDate(),24,0,0);
        }
        // check time
        var hours = (endTime.getTime() - startTime.getTime())/(1000*60*60);
        if(hours<max_hour_diffrence) {
            result = false;
            showErrorMessage(TimeDiffrenceBRMsg, true);
        }
        var now = new Date();
        now.setHours(0, 0, 0, 0);
        //reset dates
        if (startDate != null) {
            startDate.setHours(0, 0, 0, 0);
        }
        if (endDate != null) {
            endDate.setHours(23, 59, 59, 0);
        }
        //check if the client changed the start date
        //check is start date is less than the current date
        if ((startDateChanged) && (startDate != null) && (startDate < now)) {
            showErrorMessage(startDateBeforeNowBRMsg, true);
            result = false;
        }
        //check is end date is less than the current date
        if ((endDate != null) && (endDate < now)) {
            showErrorMessage(endDateBeforeNowBRMsg, true);
            result = false;
        }

        //check is end date is less than the start date
        if ((endDate != null) && (startDate > endDate)) {
            showErrorMessage(endDateBeforeStartDateBRMsg, true);
            result = false;
        }
        return result;
    };
    function validateBudget() {
        var result = true;
        var totalBudget = parseFloat(jQuery('#oCampaignDto_Budget').val());
        var dailyBudget = parseFloat(jQuery('#oCampaignDto_DailyBudget').val());

        //check if Budget is less than the min Budget
        if ((!isNaN(totalBudget)) && (totalBudget < minBudget)) {
            showErrorMessage(minBudgetMsg, true);
            result = false;
        }

        //check if Daily Budget is less than the min Daily Budget
        if ((!isNaN(dailyBudget)) && (dailyBudget < minDailyBudget)) {
            showErrorMessage(minDailyBudgetMsg, true);
            result = false;
        }

        //check if Budget is less than the Daily Budget
        if ((!isNaN(totalBudget)) && (!isNaN(dailyBudget)) && (totalBudget < dailyBudget)) {
            showErrorMessage(dailyBudgetBRMsg, true);
            result = false;
        }
        return result;
    };
</script>

