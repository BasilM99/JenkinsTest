    }


    function showPartySearchDialogPMP() {

        //  refreshPartyGrid();

        showDialog('PMPparty-search-dialog-form');
        $("#SSPPartyName").val('');
        generatePartyGridPMP();

    }
    function showfilter() {


        //$("#filterdiv").toggle();

