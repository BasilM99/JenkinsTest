@model Noqoush.AdFalcon.Web.Controllers.Model.BusinessPartners.SitesListViewModel
@{
    if (ViewContext.FormContext == null)
    {
        ViewContext.FormContext = new FormContext();
    }
    //ViewData.TemplateInfo.HtmlFieldPrefix = "SaveDto";
}
@Html.Hidden("SaveDto.ID", Model.SaveDto == null ? "" : "" + Model.SaveDto.ID, new { @class = "ValdationIgnored" })
@Html.Hidden("SaveDto.PartnerID", Model.BusinessId)

<script language="javascript">


    var DialogTitle_Form = '@Model.DialogTitle';
    var DialogWidth_Form = @Model.DialogWidth;
    var DialogHeight_Form =  @Model.DialogHeight;
</script>

<div class="section-form-inner-container" id="firstdiv">
    <div class="data-row data-container">
        <div class="label-container3">
            <span class="field-title required-field">@Html.GetResource("SiteID", "SSPSites")</span>
        </div>
        <div class="adfalcon-dialog2 field-container">
            @Html.AdFalconTextBoxFor(p => p.SaveDto.SiteID, new  { @maxlength = "50" })
            @Html.AdFalconValidationMessageFor(p => p.SaveDto.SiteID)
        </div>
    </div>

    <div class="data-row data-container">
        <div class="label-container3">
            <span class="field-title required-field">@Html.GetResource("Name", "SSPSites")</span>
        </div>
        <div class="adfalcon-dialog2 field-container">
            @Html.AdFalconTextBoxFor(p => p.SaveDto.SiteName, new { @maxlength = "200" })


        </div>
        @Html.AdFalconValidationMessageFor(p => p.SaveDto.SiteName)
    </div>


    <div class="data-row data-container">
        <div class="label-container3">
            <span class="field-title">
                @Html.GetResource("Description", "Campaign")
            </span>
        </div>
        <div class="adfalcon-dialog2 field-container  required-field iea-text-calender-margin">
            @Html.TextAreaFor(p => p.SaveDto.Description, new { @class = "text-box ValdationIgnored", rows = 3, cols = 5 })
        </div>

    </div>

</div>
