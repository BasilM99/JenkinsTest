                                        cache: false,
                                        success: function (data) {
                                            if (data.status == "success") {

                                                //refreshCampaignGrid();

                                                $("#addAdvertiserAccountEventDialog").dialog("close");


                                                refreshCampaignGrid();
                                            } else if (data.status == "businessException") {
                                                showErrorMessage(data.Message, true, "party-divErrorMessages");

