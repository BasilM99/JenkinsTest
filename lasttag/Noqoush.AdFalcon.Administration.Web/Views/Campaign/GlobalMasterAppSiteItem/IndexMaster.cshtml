    function SaveAdvertiser() {
  
		if (countcallAdv > 0) {
			return;

		}
		else {


			countcallAdv++;
		}

        //debugger;

            
                if ($('[name="CustomName"]').val() != "")
                {
                    if ($('[name="Type"]').is(':checked')) {
                        if ($('input[name="Type"]:checked').val() == "2") 
